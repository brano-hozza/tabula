{
  "name": "@bhozza/tabula",
  "version": "1.0.6",
  "description": "Package to parse CSV with validation and types",
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "require": "./lib/index.js",
      "import": "./lib/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rm -rf lib/*",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "build": "pnpm run clean && pnpm run build:cjs && pnpm run build:esm",
    "build:esm": "rollup --config ./configs/rollup.config.js",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json"
  },
  "keywords": [
    "node",
    "csv",
    "typescript",
    "validation"
  ],
  "author": "Branislav Hozza <brankohozza@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brano-hozza/tabula.git"
  },
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.14.10",
    "dotenv": "^16.4.5",
    "rollup": "^4.18.1",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3",
    "vitest": "^2.0.2"
  }
}
